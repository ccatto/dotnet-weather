@model IEnumerable<weatherCatto.Models.WeatherData>

@{
    ViewData["Title"] = "Index";
}

<div class="text-white">


    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Base)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Visibility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cod)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Base)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Visibility)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.WeatherId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.WeatherId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.WeatherId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
